!!!!!!!!!!!
!! URxvt
!!!!!!!!!!!
URxvt.depth: 32
URxvt.geometry: 150x50
URxvt.background: [80]#000000

! URxvt.colorBD: colour
! URxvt.colorIT: colour
URxvt.colorUL: #cfefff

! Fade the text by the given percentage when focus is lost
URxvt.fading: 30

URxvt.font: xft:DejaVu Sans Mono:size=10
URxvt.boldFont: xft:DejaVu Sans Mono:bold:size=10
URxvt.italicFont: xft:DejaVu Sans Mono:italic:size=10
URxvt.boldItalicFont: xft:DejaVu Sans Mono:bold:italic:size=10

! True: start as a login shell by prepending a - to argv[0] of the shell
URxvt.loginShell: true

! True: enable the scrollbar
URxvt.scrollBar: false

! URxvt.jumpScroll: boolean
! URxvt.skipScroll: boolean

! True: scroll to bottom when tty receives output
URxvt.scrollTtyOutput: false

! True: scroll with scrollback buffer when tty receives new lines
URxvt.scrollWithBuffer: true

! True: scroll to bottom when a non-special key is pressed
URxvt.scrollTtyKeypress: true

URxvt.internalBorder: 1

! Specifies the terminal type name to be set in the TERM environment variable
!URxvt.termName: rxvt-unicode-256color
URxvt.termName: xterm-256color

!! Perl extensions
URxvt.perl-ext-common: default,clipboard,matcher
! URxvt.perl-ext: string

! Specifies the program to be started with a URL argument. Used by the "selection-popup" and "matcher" perl
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! key bindings
URxvt.keysym.Mod4-C-c:   perl:clipboard:copy
URxvt.keysym.Mod4-C-v:   perl:clipboard:paste
URxvt.keysym.Mod4-M-v: perl:clipboard:paste_escaped

! Turn on/off ISO 14755 (default enabled).
URxvt.iso14755: false
! Turn on/off ISO 14755 5.2 mode (default enabled).
URxvt.iso14755_52: false
