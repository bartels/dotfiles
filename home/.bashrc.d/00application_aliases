alias top='htop'
alias service='sudo service'
alias open='xdg-open'
alias tmux='tmux -2'
alias node='env NODE_NO_READLINE=1 rlwrap -pGreen node'

alias gvime='gvim --remote-tab-silent'

# silence gvim console messages
function gvim {
    vim -g $@ &>> ~/.xsession-errors
}

# silence emacs console messages
function emacs {
    emacs24 $@ &>> ~/.xsession-errors & disown
}
